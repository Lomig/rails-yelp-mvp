<h1><%=  @restaurant.name %></h1>
<div id="info">
  <h2>Information</h2>
  <ul>
    <li>Category: <%= @restaurant.category.capitalize %></li>
    <li>Address: <%= @restaurant.address %></li>
    <li>Phone Number: <%= @restaurant.phone_number %></li>
  </ul>
</div>

<div id="reviews">
  <h2>Reviews</h2>
  <div class="review-list">
    <% if @restaurant.reviews.empty? %>
      <p>No review yet...</p>
    <% else %>
      <ul>
        <% @restaurant.reviews.order(created_at: :desc).each do |review| %>
          <li><%= review.content %> <%= review.rating %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="review-form">
  <h2>Add a review</h2>
    <%= simple_form_for([@restaurant, @review]) do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>
